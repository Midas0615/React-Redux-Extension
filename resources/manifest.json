{
  "manifest_version": 2,
  "name": "HappyWallet",
  "description": "HappyWallet chrome extension",
  "version": "0.0.0.12",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "HappyWallet"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "injector-chrome.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "*.woff",
    "*.woff2",
    "*.ttf",
    "*.eot",
    "*.svg"
  ],
  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "activeTab",
    "*://*.happywallet.co/",
    "*://*.facebook.com/",
    "*://*.chromiumapp.org/"
  ],
  "oauth2": {
    "client_id": "673899312827-odrucgrkfk37bd034haoi4q5vjd07ti1.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
